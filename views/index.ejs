<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Notes Taking Web App</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none" type="text" placeholder="Title" name="title">
                <textarea class="block mt-2 px-5 py-2 bg-zinc-800 resize-none w-full rounded-md outline-none" placeholder="Task Details" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if (tasks.length > 0) { %>
                <% tasks.forEach(function(task) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= task.title %></h1>
                        <p class="text-white mt-2"><%= task.details %></p>
                     
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No Tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
